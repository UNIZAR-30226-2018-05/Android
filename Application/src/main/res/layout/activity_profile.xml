<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="android.prosotec.proyectocierzo.ProfileActivity">

    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MI PERFIL"
            android:gravity="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nombre"
            android:paddingLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text_title"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@id/tv_nombre"/>

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="E-mail"
            android:paddingLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name"/>
        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:inputType="textEmailAddress"
            android:layout_below="@id/tv_mail"/>

        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Biografía"
            android:paddingLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/mail"/>
        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@id/tv_bio"/>

        <TextView
            android:id="@+id/tv_passw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Contraseña"
            android:paddingLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bio"/>
        <EditText
            android:id="@+id/passw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:inputType="textPassword"
            android:layout_below="@id/tv_passw"/>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar cambios"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@color/colorLoginGradienteAlto"
            android:layout_below="@id/passw" />
        
    </RelativeLayout>

</FrameLayout>