<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#FFFFFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
    
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/text_row_cover_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/gray_background"
            app:riv_corner_radius="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_row_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artista"
                android:textColor="#ab000000"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <CheckBox
            android:id="@+id/text_row_fav_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:text=""
            android:layout_margin="8dp"
            android:buttonTint="#00000000"
            android:background="@drawable/favorite_checkbox"/>

        <ImageButton
            android:id="@+id/text_row_cross_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="#000000"
            android:backgroundTint="#00000000"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/text_row_dragAndDrop_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:src="@drawable/ic_reorder_black_24dp"
            android:tint="#a3a3a3"
            android:layout_margin="8dp"
            />

    </LinearLayout>

</RelativeLayout>
