<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selecciona el modo del ecualizador"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/pre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRA"/>
                <Button
                    android:id="@+id/pre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRE"/>
                <Button
                    android:id="@+id/pre3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRI"/>
                <Button
                    android:id="@+id/pre4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRO"/>
                <Button
                    android:id="@+id/pre5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRU"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/pre6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRAH"/>
                <Button
                    android:id="@+id/pre7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREH"/>
                <Button
                    android:id="@+id/pre8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIH"/>
                <Button
                    android:id="@+id/pre9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROH"/>
                <Button
                    android:id="@+id/pre10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRUH"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>